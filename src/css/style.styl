body {
  color: #555;
  font-family: 'Average Sans', sans-serif;
  background-color: #1e1d1f;
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

span, h1, div {
  cursor: default;
}

.main-menu {
  color: #ddd;
}

.title {
  text-align: center;
  animation: showTitle 0.5s ease-out;
  margin-bottom: 40px;
}

@keyframes showTitle {
  0% {opacity: 0; transform: translateY(-30px)}
  100% {opacity: 1;}
}

.title-extra {
  display: inline-block;
  animation: showExtraTitle 1s 0.6s ease-in-out both;
  transform-origin: bottom left;
  
  &.hidden {
    display: none;
  }
}

@keyframes showExtraTitle {
  0% {opacity: 0;}
  50% {opacity: 1; transform: scale(1.3) skewX(-15deg);}
  100% {opacity: 1;}
}

.navigation {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #555;
  .key {
    opacity: 1;
    animation: showTitle 0.5s 0.4s both;
  }
}

.nav-key {
  width: 150px;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  animation: showTitle 0.5s 0.4s both;
}

.main-container {
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
  border: 1px solid gold;
  height: 600px;
  width: 900px;
}

.score {
  position: absolute;
  top: 15px;
  left: calc(50% - 50px);
  width: 100px;
  text-align: center;
  color: #eee;
  font-size: 24px;
  text-shadow: 0 0 5px rgba(255, 255, 255, 0.5);
}

canvas {
  background-color: #222;
}

.key {
  opacity: 0.3;
  background: #d3cfcc;
  border-color: #ece8e4 #dedad6 #c9c4c4;
  width: 40px;
  height: 45px;
  margin: 2px;
  border-width: 3px 7px 10px;
  border-style: solid;
  border-radius: 4px;
  animation: keyIn 1s;
  &.pressed {
    opacity: 0.6;
    -webkit-transform: scale(0.95, 0.95);
    -moz-transform: scale(0.95, 0.95);
    -ms-transform: scale(0.95, 0.95);
    -o-transform: scale(0.95, 0.95);
    transform: scale(0.95, 0.95);
  }
}

@keyframes keyIn {
  0% {oapcity: 0}
  50% {opacity: 1}
  100% {opacity: 0.3}
}

.game-container {
  display: flex;
  position: relative;
  animation: fadeIn 1s;
}

@keyframes fadeIn {
  0% {opacity: 0}
  100% {opacity: 1}
}

.keys {
  display: flex;
  position: absolute;
  top: 5px;
  left: 5px;
  animation: keysIn 1s;
}

@keyframes keysIn {
  0% {opacity: 0; transform: translate(90px, 90px)}
  50% {opacity: 1; transform: scale(1.2) translate(70px, 70px)}
  100% {}
}

.keycap {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  height: 45px;
  font-size: 18px;
  line-height: 1;
  background: #f5f3f1;
  background: -webkit-linear-gradient(left, #e5e2e1, #f5f3f1, #e5e2e1);
  background: -moz-linear-gradient(left, #e5e2e1, #f5f3f1, #e5e2e1);
  background: -ms-linear-gradient(left, #e5e2e1, #f5f3f1, #e5e2e1);
  background: -o-linear-gradient(left, #e5e2e1, #f5f3f1, #e5e2e1);
  background: linear-gradient(left, #e5e2e1, #f5f3f1, #e5e2e1);
  box-shadow: 0 0 10px rgba(0,0,0,0.15);
  border-radius: 4px;
  position: relative;
}

.arrow-down {
  span {
    transform: rotate(90deg);
  }
}

.arrow-left {
  span {
    transform: rotate(180deg);
  }
}

.arrow-up {
  span {
    transform: rotate(270deg);
  }
}

