html {
  height: 100%
}

body {
  margin 0
  padding 0
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #555;
  font-family: 'Average Sans', sans-serif;
  background-color: #1e1d1f;
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

span, h1, div {
  cursor: default;
}

.loading {
  font-size: 40px;
}

.scores-container {
  display: flex;
  justify-content: space-between;
  color: #bbb;
  margin-bottom: 30px;
  animation: fadeScores 0.5s 0.8s both;
  
  &.hidden {
    display: none;
  }
}

@keyframes fadeScores {
  0% {opacity: 0}
  100% {opacity: 1}
}

.main-menu {
  display: none;
  color: #ddd;
  margin-bottom: 100px;
}

.title-page {
  width: 340px;
  
  &.hidden {
    display: none;
  }
}

.title {
  text-align: center;
  animation: showTitle 0.5s ease-out;
  margin-bottom: 40px;
}

@keyframes showTitle {
  0% {opacity: 0; transform: translateY(-30px)}
  100% {opacity: 1;}
}

.title-extra {
  display: inline-block;
  animation: showExtraTitle 1s 0.6s ease-in-out both;
  transform-origin: bottom left;
  
  &.hidden {
    display: none;
  }
}

@keyframes showExtraTitle {
  0% {opacity: 0;}
  50% {opacity: 1; transform: scale(1.3) skewX(-15deg);}
  100% {opacity: 1;}
}

.navigation {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #555;
  .key {
    opacity: 1;
    animation: showTitle 0.5s 0.4s both;
  }
}

.nav-key {
  width: 150px;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  animation: showTitle 0.5s 0.4s both;
}

.nav-key-label {
  color: #ddd;
}

.instructions-page {
  animation: showPage 0.5s;
  
  &.hidden {
    opacity: 0;
  }
  
  .nav-key, .key {
    animation: none;
  }
}

@keyframes showPage {
  0% {opacity: 0}
  100% {opacity: 1}
}

.instructions-intro {
  margin: 15px 0;
}

.instructions {
  text-align: center;
  margin-bottom: 20px;
}

.game-instruction {
  font-weight: bold;
  
  .game-info {
    font-weight: normal;
    &.locked {
      opacity: 0.5;
    }
  }
}

.credits {
  position: absolute;
  bottom: 5px;
  width: 400px;
  text-align: center;
  left: calc(50% - 200px);
  color: #444;
  animation: fadeIn 0.5s 1s ease-out both;
}

.continue {
  display: none;
  position: absolute;
  bottom: 100px;
  width: 400px;
  text-align: center;
  font-size: 24px;
  left: calc(50% - 200px);
  animation: fadeIn 0.5s ease-out both;
}

.main-container {
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
  height: 600px;
  width: 900px;
}

.games {
  display: flex;
  position: absolute;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  top: calc(50% - 300px);
  left: calc(50% - 450px);
  right: calc(50% - 450px);
  bottom: calc(50% - 300px);
  
  &.lost {
    animation: fadeOut 1s ease-out both;
  }
}

@keyframes fadeOut {
  0% {opacity: 1}
  100% {opacity: 0}
}

.score {
  position: absolute;
  top: 15px;
  left: calc(50% - 50px);
  width: 100px;
  text-align: center;
  color: #eee;
  font-size: 24px;
  text-shadow: 0 0 5px rgba(255, 255, 255, 0.5);
}

.game-container {
  canvas {
    background-color: #222;
  }
}

.game-container:nth-of-type(2) {
  canvas {
    background-color: #232;
  }
}

.game-container:nth-of-type(3) {
  canvas {
    background-color: #234;
  }
}

.game-container:nth-of-type(4) {
  canvas {
    background-color: #322;
  }
}

.game-container:nth-of-type(5) {
  canvas {
    background-color: #323;
  }
}

.game-container:nth-of-type(6) {
  canvas {
    background-color: #432;
  }
}

.key {
  opacity: 0.3;
  background: #d3cfcc;
  border-color: #ece8e4 #dedad6 #c9c4c4;
  width: 40px;
  height: 45px;
  margin: 2px;
  border-width: 3px 7px 10px;
  border-style: solid;
  border-radius: 4px;
  animation: keyIn 1s;
  &.pressed {
    opacity: 0.6;
    -webkit-transform: scale(0.95, 0.95);
    -moz-transform: scale(0.95, 0.95);
    -ms-transform: scale(0.95, 0.95);
    -o-transform: scale(0.95, 0.95);
    transform: scale(0.95, 0.95);
  }
}

@keyframes keyIn {
  0% {oapcity: 0}
  50% {opacity: 1}
  100% {opacity: 0.3}
}

.game-container {
  display: flex;
  position: relative;
  animation: fadeIn 1s;
}

@keyframes fadeIn {
  0% {opacity: 0}
  100% {opacity: 1}
}

.keys {
  display: flex;
  position: absolute;
  top: 5px;
  left: 5px;
  animation: keysIn 1s;
}

@keyframes keysIn {
  0% {opacity: 0; transform: translate(90px, 90px)}
  50% {opacity: 1; transform: scale(1.2) translate(70px, 70px)}
  100% {}
}

.keycap {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  height: 45px;
  font-size: 18px;
  line-height: 1;
  background: #f5f3f1;
  background: -webkit-linear-gradient(left, #e5e2e1, #f5f3f1, #e5e2e1);
  background: -moz-linear-gradient(left, #e5e2e1, #f5f3f1, #e5e2e1);
  background: -ms-linear-gradient(left, #e5e2e1, #f5f3f1, #e5e2e1);
  background: -o-linear-gradient(left, #e5e2e1, #f5f3f1, #e5e2e1);
  background: linear-gradient(left, #e5e2e1, #f5f3f1, #e5e2e1);
  box-shadow: 0 0 10px rgba(0,0,0,0.15);
  border-radius: 4px;
  position: relative;
}

.arrow-down {
  span {
    transform: rotate(90deg);
  }
}

.arrow-left {
  span {
    transform: rotate(180deg);
  }
}

.arrow-up {
  span {
    transform: rotate(270deg);
  }
}

.brick-overlay {
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  flex-wrap: wrap;
}

.brick {
  width: 100px;
  height: 100px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.play-all {
  transform: translateY(50px);
  
  &.hidden {
    display: none;
  }
}
